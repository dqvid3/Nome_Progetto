        <item name="colorPrimary">@color/blackPart</item>
        <item name="colorPrimaryVariant">@color/blackPart</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
